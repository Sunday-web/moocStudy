<!-- 以上是flex部分讲解 -->
<view class='container'>
<view class='header'>
  <v-epsoide class="epsoide" index="{{classic.index}}" />
  <v-like class="like" bind:like="onLike" like="{{classic.like_status}}" count="{{classic.fav_nums}}" />
</view>
<v-movie img="{{classic.image}}" content="{{classic.content}}" />
<v-navi bind:left="onNext" bind:right="onPrevious" title="{{classic.title}}" first="{{first}}" latest="{{latest}}" class="navi"/>
</view>